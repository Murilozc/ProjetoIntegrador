@model Pacotes
@{
    ViewData["Title"] = "Editar";
}
<div class="titulo2">
<h1>Editar Pacotes Turísticos</h1>
<form method="POST" asp-action="Editar">
    <input type="hidden" asp-for="Id">
    <p>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" type="text"  required/>
    </p>
    
    <p>
        <label asp-for="Origem">Origem:</label>
        <input asp-for="Origem" type="text"  required/>
    </p>
    
    <p>
        <label asp-for="Destino">Destino:</label>
        <input asp-for="Destino"type="text"  required/>
    </p>
    
    <p>
        <label asp-for="Saida">Saída:</label>
        <input asp-for="Saida"type="date"  required/>
    </p>

   
    <p>
        <label asp-for="Valor">Valor:</label>
        <input  asp-for="Valor"type="number" required/>
    </p>

<input type="submit" value="Editar">
<p>
    @ViewBag.Mensagem
</p>


</form>
</div>
